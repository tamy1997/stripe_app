<%= javascript_include_tag "https://js.stripe.com/v2/" %>
        <%= form_for current_user.credit_cards.new, url: charges_path do |f| %>
            <%= hidden_field_tag :product_id, @product.id %>
          <ul class="form-list">
            <li class="form-list__row">
              <label>Card Number</label>
              <div id="input--cc" class="creditcard-icon">
                <input type="text" name="number" required="" maxlength="16" />
              </div>
            </li>
            <li class="form-list__row form-list__row--inline">
              <div>
                <label>Expiration Date</label>
                <div class="form-list__input-inline">
                  <input type="text" name="month" placeholder="MM"                                      minlength="2" maxlength="2" required="" max="12" />
                  <input type="text" name="year" placeholder="YY"                                          maxlength="4" required="" />
                </div>
              </div>
              <div>
                  <label>
                     CVC
                  </label>
                  <input type="text" name="cvc" placeholder="123"                                            maxlength="3" required="" />
              </div>
            </li>
            <li>
              <button type="submit" class="button">Pay Now</button>
            </li>
         </ul>
<%end%>